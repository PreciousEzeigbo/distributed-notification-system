# API Gateway Environment Variables

# Database
DATABASE_URL=postgresql://gateway_service:gateway_password@gateway-db:5432/gateway_service_db

# Redis
REDIS_URL=redis://redis:6379/0
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# RabbitMQ
RABBITMQ_URL=amqp://admin:admin@rabbitmq:5672/
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=admin
RABBITMQ_VHOST=/

# JWT Authentication
SECRET_KEY=your-super-secret-key-min-64-characters-for-production-use-only
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# Idempotency
IDEMPOTENCY_TTL_HOURS=24

# Circuit Breaker
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60

# Service URLs (for inter-service communication)
USER_SERVICE_URL=http://user-service:8001
TEMPLATE_SERVICE_URL=http://template-service:8002

# API Gateway
PORT=8000
HOST=0.0.0.0
