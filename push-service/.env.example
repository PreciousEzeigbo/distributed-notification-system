# Push Service Environment Variables

# RabbitMQ
RABBITMQ_URL=amqp://admin:admin@rabbitmq:5672/
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=admin
RABBITMQ_VHOST=/
PUSH_QUEUE=push.queue
FAILED_QUEUE=failed.queue

# Firebase Cloud Messaging (FCM)
FCM_CREDENTIALS_FILE=/app/fcm-credentials.json
FCM_PROJECT_ID=your-firebase-project-id

# Circuit Breaker
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60

# Retry Configuration
MAX_RETRIES=3
RETRY_BASE_DELAY=2
RETRY_MAX_DELAY=60

# Template Service URL
TEMPLATE_SERVICE_URL=http://template-service:8002

# API Gateway URL (for status updates)
API_GATEWAY_URL=http://api-gateway:8000
