# ============================================
# DISTRIBUTED NOTIFICATION SYSTEM - ENV FILE
# ============================================

# ======================
# DATABASE CONFIGURATION
# ======================
# User Service Database
USER_DB_HOST=user-db
USER_DB_PORT=5432
USER_DB_NAME=user_service_db
USER_DB_USER=user_service
USER_DB_PASSWORD=change_this_password_in_production

# Template Service Database
TEMPLATE_DB_HOST=template-db
TEMPLATE_DB_PORT=5432
TEMPLATE_DB_NAME=template_service_db
TEMPLATE_DB_USER=template_service
TEMPLATE_DB_PASSWORD=change_this_password_in_production

# Gateway Service Database
GATEWAY_DB_HOST=gateway-db
GATEWAY_DB_PORT=5432
GATEWAY_DB_NAME=gateway_service_db
GATEWAY_DB_USER=gateway_service
GATEWAY_DB_PASSWORD=change_this_password_in_production

# ======================
# REDIS CONFIGURATION
# ======================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ======================
# RABBITMQ CONFIGURATION
# ======================
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=change_this_password_in_production
RABBITMQ_VHOST=/

# ======================
# SERVICE URLS (Internal)
# ======================
# For Docker deployment, use container names
# For cloud deployment, use actual URLs
USER_SERVICE_URL=http://user-service-nestjs:3000
TEMPLATE_SERVICE_URL=http://template-service:3000

# ======================
# API GATEWAY
# ======================
API_GATEWAY_PORT=8000
SECRET_KEY=change_this_to_a_random_secret_key_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# Idempotency
IDEMPOTENCY_TTL_HOURS=24

# ======================
# EMAIL SERVICE
# ======================
# SMTP Configuration for sending emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@yourapp.com

# ======================
# PUSH SERVICE
# ======================
# Firebase Cloud Messaging
# Place your FCM service account JSON in push-service/fcm-credentials.json

# ======================
# DEPLOYMENT SETTINGS
# ======================
ENVIRONMENT=production
LOG_LEVEL=info
